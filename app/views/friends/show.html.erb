<!-- Custom Jumbotron -->
<div class="py-5 mb-4 bg-light">
    <div class="container">
        <h1><%= @friend.name %></h1>
        <p class="lead">
          <strong>Email:</strong>
          <%= @friend.email %><br/>
          <strong>Phone:</strong>
          <%= @friend.phone %><br/>
          <strong>Birthday:</strong>
          <%= @friend.birthday %>
        </p><br/>
        <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark" %>
        <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
    </div>
</div>
